{
  "compilerOptions": {
    /* ===== 필수/권장 기본값 ===== */
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler", // Next/SWC 번들러에 맞춤
    "jsx": "preserve",
    "verbatimModuleSyntax": true, // TS5+: ESM 문법 보존 (트리쉐이킹/정적 분석 유리)
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true, // SWC 변환 안정성
    "noEmit": true,
    "skipLibCheck": true, // 컴파일 속도 개선
    /* ===== 타입 안정성(강화) ===== */
    "strict": true, // 엄격 모드 전체 활성
    "noUncheckedIndexedAccess": true, // arr[i]/obj[key] → T | undefined 로 안전하게
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    /* ===== 팀 선호에 따라 조정(권장) ===== */
    "exactOptionalPropertyTypes": true, // 옵셔널 속성 의미를 정확히 (라이브러리 마찰 시 임시 false)
    "noImplicitOverride": true, // 오버라이드 누락 방지
    "noUnusedLocals": true, // 사용 안 하는 로컬 변수 경고(사용 습관 개선)
    "noUnusedParameters": true, // 필요시 켜기
    /* ===== 경로 별칭 (@/* → src/*) ===== */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    /* ===== 증분 빌드 ===== */
    "incremental": true,
    /* ===== Next 전용 플러그인 ===== */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017",
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase/functions/**"
  ]
}
